{
  "$schema": "http://www.perspectiva.it/schemas/likeamap1",
  "type": "object",
  "title": "Configurazione Applicazione",
  "properties": {
    "title": {
      "title": "Titolo",
      "propertyOrder": 1,
      "description": "Nome della mappa",
      "type": "string",
      "options": {
        "grid_columns": 6
      }
    },
    "restAPIUrl": {
      "title": "Url API Rest",
      "propertyOrder": 2,
      "description": "Url assoluto o relativo delle API REST",
      "type": "string",
      "default": "/",
      "options": {
        "grid_columns": 6
      }
    },
    "templatesRepositoryUrl": {
      "title": "Url Template repository",
      "propertyOrder": 3,
      "description": "Url assoluto o relativo per il caricamento dei template",
      "type": "string",
      "default": "templates",
      "options": {
        "grid_columns": 6
      }
    },
    "relationsRepositoryUrl": {
      "title": "Url Relation repository",
      "propertyOrder": 4,
      "description": "Url assoluto o relativo per il caricamento delle relation",
      "type": "string",
      "default": "templates",
      "options": {
        "grid_columns": 6
      }
    },
    "startMapLon": {
      "title": "Longitudine",
      "propertyOrder": 5,
      "description": "Longitudine iniziale",
      "default": 0,
      "type": "number",
      "options": {
        "grid_columns": 2
      }
    },
    "startMapLat": {
      "title": "Latitudine",
      "propertyOrder": 6,
      "description": "Latitudine iniziale",
      "default": 0,
      "type": "number",
      "options": {
        "grid_columns": 2
      }
    },
    "startMapZoom": {
      "title": "Zoom",
      "propertyOrder": 7,
      "description": "Zoom iniziale",
      "default": 13,
      "type": "integer",
      "options": {
        "grid_columns": 2
      }
    },
    "mapLon": {
      "title": "",
      "propertyOrder": 8,
      "description": "Valore di sistema, lasciare a 0",
      "default": 0,
      "type": "number",
      "options": {
        "input_width": "120px",
        "hidden": true
      }
    },
    "mapLat": {
      "title": "",
      "propertyOrder": 9,
      "description": "Valore di sistema, lasciare a 0",
      "default": 0,
      "type": "number",
      "options": {
        "input_width": "120px",
        "hidden": true
      }
    },
    "mapZoom": {
      "title": "",
      "propertyOrder": 10,
      "description": "Valore di sistema, lasciare a 0",
      "default": 0,
      "type": "integer",
      "options": {
        "input_width": "50px",
        "hidden": true
      }
    },
    "searchProvider": {
      "title": "Provider di ricerca",
      "propertyOrder": 11,
      "description": "Valore di sistema, lasciare a 0",
      "type": "string",
      "enum": ["nominatim", "wms_geoserver", "google", "bing"],
      "options": {
        "input_width": "50px",
        "hidden": true
      }
    },
    "searchProviderAddressUrl": {
      "title": "Url/KEY del provider di ricerca",
      "propertyOrder": 12,
      "description": "Url del provider di ricerca per WMS o API KEY Google/Bing",
      "type": "string",
      "options": {
        "grid_columns": 2
      }
    },
    "searchProviderAddressField": {
      "title": "Campo del provider di ricerca vie",
      "propertyOrder": 13,
      "description": "Campo in cui verrà effettuata la ricerca WMS",
      "type": "string",
      "options": {
        "grid_columns": 2
      }
    },
    "searchProviderHouseNumberUrl": {
      "title": "Url/KEY del provider di ricerca civici",
      "propertyOrder": 14,
      "description": "Url del provider di ricerca per i civici",
      "type": "string",
      "options": {
        "grid_columns": 2
      }
    },
    "searchProviderHouseNumberField": {
      "title": "Campo del provider di ricerca civici",
      "propertyOrder": 15,
      "description": "Campo in cui verrà effettuata la ricerca civici",
      "type": "string",
      "options": {
        "grid_columns": 2
      }
    },
    "drawFeatures": {
      "title": "",
      "propertyOrder": 16,
      "description": "Valore di sistema, lasciare a null",
      "default": "",
      "type": "string",
      "options": {
        "hidden": true
      }
    },
    "comuni": {
      "title": "",
      "propertyOrder": 17,
      "description": "Valore di sistema, lasciare a null",
      "type": "array",
      "items": {},
      "options": {
        "hidden": true
      }
    },
    "authentication": {
      "options": {
        "collapsed": true
      },
      "propertyOrder": 18,
      "description": "Moduli abilitati",
      "type": "object",
      "title": "Moduli",
      "format": "grid",
      "properties": {
        "requireAuthentication": {
          "title": "Autenticazione Richiesta",
          "propertyOrder": 1,
          "description": "Richiede l'Autenticazione",
          "type": "boolean",
          "format": "checkbox",
          "options": {
            "grid_columns": 2
          }
        },
        "required": []
      }
    },

    "modules": {
      "options": {
        "collapsed": true
      },
      "propertyOrder": 19,
      "description": "Moduli abilitati",
      "type": "object",
      "title": "Moduli",
      "format": "grid",
      "properties": {
        "layer-tree": {
          "title": "Livelli",
          "propertyOrder": 1,
          "description": "Elenco dei livelli",
          "type": "boolean",
          "format": "checkbox",
          "options": {
            "grid_columns": 2
          }
        },
        "search-tools": {
          "title": "Ricerca",
          "propertyOrder": 2,
          "description": "Ricerca vie",
          "type": "boolean",
          "format": "checkbox",
          "options": {
            "grid_columns": 2
          }
        },
        "print-tools": {
          "title": "Stampa",
          "propertyOrder": 3,
          "description": "Stampa pdf",
          "type": "boolean",
          "format": "checkbox",
          "options": {
            "grid_columns": 2
          }
        },
        "share-tools": {
          "title": "Condividi",
          "propertyOrder": 4,
          "description": "Condividi mappe",
          "type": "boolean",
          "format": "checkbox",
          "options": {
            "grid_columns": 2
          }
        },
        "map-tools": {
          "title": "Strumenti",
          "propertyOrder": 6,
          "description": "Strumenti mappa",
          "type": "boolean",
          "format": "checkbox",
          "options": {
            "grid_columns": 2
          }
        },
        "draw-tools": {
          "title": "Disegno",
          "propertyOrder": 7,
          "description": "Strumenti di disegno",
          "type": "boolean",
          "format": "checkbox",
          "options": {
            "grid_columns": 2
          }
        },
        "gps-tools": {
          "title": "GPS",
          "propertyOrder": 8,
          "description": "Strumenti GPS",
          "type": "boolean",
          "format": "checkbox",
          "options": {
            "grid_columns": 2
          }
        },
        "auth-tools": {
          "title": "Login",
          "propertyOrder": 8,
          "description": "Accesso tramite login",
          "type": "boolean",
          "format": "checkbox",
          "options": {
            "grid_columns": 2
          }
        }
      },
      "required": ["layer-tree", "search-tools", "print-tools", "share-tools", "map-tools", "draw-tools", "gps-tools"]
    },
    "selectedInfoItems": {
      "options": {
        "collapsed": true
      },
      "propertyOrder": 21,
      "description": "Elenco delle feature correntemente selezionate sulla mappa",
      "type": "array",
      "title": "Gruppi",
      "items": {
        "options": {
          "collapsed": true
        },
        "type": "object"
      }
    },
    "layers": {
      "options": {
        "collapsed": true
      },
      "propertyOrder": 22,
      "description": "Elenco dei raggruppamenti di layer",
      "type": "array",
      "title": "Gruppi",
      "items": {
        "options": {
          "collapsed": true
        },
        "type": "object",
        "title": "Gruppo",
        "headerTemplate": "{{ self.layerName }}",
        "format": "grid",
        "properties": {
          "gid": {
            "title": "Identificativo univoco",
            "propertyOrder": 1,
            "description": "Identificatore globale univoco ",
            "type": "string",
            "options": {
              "grid_columns": 6
            }
          },
          "layerName": {
            "title": "Titolo",
            "propertyOrder": 2,
            "description": "Nome del layer (visualizzato in mappa)",
            "type": "string",
            "options": {
              "grid_columns": 6
            }
          },
          "layerType": {
            "title": "Tipologia",
            "propertyOrder": 3,
            "description": "Tipologia di layer",
            "type": "string",
            "enum": ["group"],
            "options": {
              "grid_columns": 2
            }
          },
          "visible": {
            "title": "Visibilità",
            "propertyOrder": 4,
            "description": "Visibilità iniziale in mappa",
            "enum": [0, 1],
            "type": "integer",
            "options": {
              "grid_columns": 2
            }
          },
          "layers": {
            "options": {
              "collapsed": true
            },
            "title": "Livelli",
            "propertyOrder": 5,
            "description": "Array dei layer catografici appartenenti al gruppo",
            "type": "array",
            "items": {
              "type": "object",
              "title": "Livello",
              "headerTemplate": "{{ self.layerName }}",
              "options": {
                "collapsed": true
              },
              "format": "grid",
              "properties": {
                "gid": {
                  "title": "identificativo univoco",
                  "propertyOrder": 1,
                  "description": "Identificatore globale univoco",
                  "type": "string",
                  "options": {
                    "input_width": "120px",
                    "grid_columns": 2
                  }
                },
                "layerName": {
                  "title": "Titolo",
                  "propertyOrder": 2,
                  "description": "Nome del layer (visualizzato in mappa)",
                  "type": "string",
                  "options": {
                    "grid_columns": 5
                  }
                },
                "mapUri": {
                  "title": "URL (WMS, TMS)",
                  "propertyOrder": 3,
                  "description": "Url base del layer. Es: http://localhost:8080/geoserver/wms?",
                  "type": "string",
                  "options": {
                    "grid_columns": 5
                  }
                },
                "layerType": {
                  "title": "Tipologia",
                  "propertyOrder": 4,
                  "description": "Tipologia del layer",
                  "enum": ["wmstiled", "wms", "osm"],
                  "type": "string",
                  "default": "wmstiled",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "layer": {
                  "title": "Nome Layer",
                  "propertyOrder": 5,
                  "description": "Nome del layer WMS da visualizzare. Per geoserver mettere workspace:nome del layer Es: stradario:civici",
                  "type": "string",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "srs": {
                  "title": "SRID",
                  "propertyOrder": 6,
                  "description": "SRID del layer. Es: 3857 (al momento è supportato solo il 3857)",
                  "enum": ["3857"],
                  "type": "string",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "opacity": {
                  "title": "Opacità",
                  "propertyOrder": 7,
                  "description": "Trasparenza iniziale del layer",
                  "enum": [1, 0.9, 0.8, 0.7, 0.6, 0.5, 0.4, 0.3, 0.2, 0.1, 0],
                  "type": "number",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "params": {
                  "title": "Parametri aggiuntivi",
                  "propertyOrder": 8,
                  "description": "Parametri aggiuntivi da aggiungere alla chiamata WMS. Per maggiori informazioni consultare la specifica del WMS",
                  "type": "string",
                  "options": {
                    "grid_columns": 4
                  }
                },
                "tileMode": {
                  "title": "Tipologia Tile",
                  "propertyOrder": 9,
                  "description": "Tipologia di tile da utilizare. Lasciare vuoto per il formato server predefinito",
                  "enum": ["", "xyz", "quadkey"],
                  "type": "string",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "visible": {
                  "title": "Visibilità",
                  "propertyOrder": 10,
                  "description": "Visibilità iniziale in mappa",
                  "enum": [0, 1],
                  "type": "integer",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "queryable": {
                  "title": "Layer interrogabile",
                  "propertyOrder": 11,
                  "description": "Definire se il layer è interrogabile tramite click, se visibile.",
                  "enum": [0, 1],
                  "type": "integer",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "searchable": {
                  "title": "Layer ricercabile",
                  "propertyOrder": 13,
                  "description": "Definire se il layer è ricercabile.",
                  "enum": [0, 1],
                  "type": "integer",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "searchField": {
                  "title": "Campo di ricerca",
                  "propertyOrder": 14,
                  "description": "Campo su cui effettuare la ricerca. Deve essere un campo di tipo string",
                  "type": "string",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "labelField": {
                  "title": "Campo etichetta",
                  "propertyOrder": 15,
                  "description": "Campo da utilizzare come etichetta. Deve essere un campo di tipo string",
                  "type": "string",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "zIndex": {
                  "title": "Ordine del livello",
                  "propertyOrder": 16,
                  "description": "Ordine di visualizzazione in mappa",
                  "minimum": 0,
                  "type": "integer",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "attribution": {
                  "title": "Attribuzione del layer",
                  "propertyOrder": 17,
                  "description": "Attribuzione dei diritti da visualizzare per il layer",
                  "type": "string",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "legendUrl": {
                  "title": "Legenda personalizzata",
                  "propertyOrder": 18,
                  "description": "Url della legenda personalizzata",
                  "type": "string",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "hideLegend": {
                  "title": "Nascondi Legenda",
                  "propertyOrder": 19,
                  "description": "Nasconde la legenda se non disponibile",
                  "type": "boolean",
                  "options": {
                    "grid_columns": 2
                  }
                },
                "templateUri": {
                  "title": "Url del template",
                  "propertyOrder": 20,
                  "description": "Url assoluto o nome del file del repo. Se lasciato vuoto viene impostato il gid del layer con estensione .json utilizzando il repo",
                  "type": "string",
                  "options": {
                    "grid_columns": 2
                  }
                }
              },
              "required": [
                "gid",
                "mapUri",
                "layerType",
                "layerName",
                "layer",
                "srs",
                "opacity",
                "params",
                "tileMode",
                "visible",
                "queryable",
                "labelField",
                "zIndex"
              ]
            }
          }
        },
        "required": ["gid", "layerType", "layerName", "visible", "layers"]
      }
    }
  },
  "required": ["restAPIUrl", "title", "startMapLon", "startMapLat", "startMapZoom", "modules", "layers"]
}
