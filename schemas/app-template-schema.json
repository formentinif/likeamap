{
  "$schema": "http://www.perspectiva.it/schemas/likeamap1",
  "type": "object",
  "title": "Configurazione Template LikeAMap",
  "properties": {
    "gid": {
      "title": "Codice del template",
      "propertyOrder": 1,
      "description": "Codice del template",
      "type": "string",
      "options": {
        "grid_columns": 2
      }
    },
    "title": {
      "title": "Titolo",
      "propertyOrder": 1,
      "description": "Nome del template",
      "type": "string",
      "options": {
        "grid_columns": 2
      }
    },
    "layer": {
      "title": "Layer",
      "propertyOrder": 2,
      "description": "Identificativo del layer WMS, senza workspace",
      "type": "string",
      "options": {
        "grid_columns": 2
      }
    },
    "layerGid": {
      "title": "GID",
      "propertyOrder": 2,
      "description": "Identificativo del layer definito nel file di configurazione dell'applicatione",
      "type": "string",
      "options": {
        "grid_columns": 2
      }
    },
    "templateType": {
      "title": "Tipologia",
      "propertyOrder": 2,
      "description": "Tipologia del template",
      "enum": ["simple"],
      "type": "string",
      "options": {
        "grid_columns": 2
      }
    },
    "fields": {
      "options": {
        "collapsed": false
      },
      "format": "table",
      "propertyOrder": 11,
      "description": "Campi da visualizzare",
      "type": "array",
      "title": "Campi",
      "items": {
        "options": {
          "collapsed": false
        },
        "type": "object",
        "title": "Campo",
        "headerTemplate": "{{ self.field }}",
        "format": "grid",
        "properties": {
          "field": {
            "title": "Nome Campo",
            "propertyOrder": 1,
            "description": "Nome del campo della tabella ",
            "type": "string",
            "options": {
              "grid_columns": 2
            }
          },
          "label": {
            "title": "Alias",
            "propertyOrder": 1,
            "description": "Etichetta del campo da visualizzare",
            "type": "string",
            "options": {
              "grid_columns": 2
            }
          },
          "type": {
            "title": "Tipologia",
            "propertyOrder": 1,
            "description": "Tipo di campo",
            "type": "string",
            "enum": ["string", "int", "yesno", "moreinfo", "array", "link"],
            "options": {
              "grid_columns": 2
            }
          },
          "header": {
            "title": "Intestazione",
            "propertyOrder": 1,
            "description": "Intestazione del campo",
            "type": "string",
            "options": {
              "grid_columns": 2
            }
          },
          "footer": {
            "title": "Pi√® pagina",
            "propertyOrder": 1,
            "description": "Fine del campo",
            "type": "string",
            "options": {
              "grid_columns": 2
            }
          },
          "itemTemplate": {
            "title": "Oggetto",
            "propertyOrder": 1,
            "description": "Template handlebars del singolo oggetto. (Solo per tipologia 'array')",
            "type": "string",
            "options": {
              "grid_columns": 2
            }
          }
        },
        "required": ["field", "label", "type"]
      }
    }
  },
  "required": ["title", "layer", "layerGid", "templateType", "fields"]
}
